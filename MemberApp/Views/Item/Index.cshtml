@model IEnumerable<Item>;
@{
    ViewData["Title"] = "Index";
}

<div "class=container p-3">
    <div class="row pt-4">
        <div class="cl-6">
        <h2 class="text-primary">Item List</h2>
        </div>
    </div>
    <br /> <br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th width="20%">
                Item name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                <td width="30%">
                    @item.Description
                </td>
            </tr>
            }
    </tbody>
</table>



</div>
