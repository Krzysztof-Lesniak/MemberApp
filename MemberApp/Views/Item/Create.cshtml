@model Item
<form method="post">
	<h1>Add new item to list</h1>
	<div class="border p-3 mt-4">
		<h2 class="row pb-2">Create new item</h2>
		<hr />
	</div>
	<div class="mb-3">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control"/>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div>
		<select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()">
			<option value="">Choose a category</option>
		</select>
	</div>
	<div class="mb-3">
		<label asp-for="Description"></label>
		<input asp-for="Description" class="form-control"/>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<button type="submit" class="btn-primary" style="width:150px">Create</button>
	<a asp-controller="Item" asp-action="Index" class="btn btn-secondary" style="width:150px">
		Back to List
	</a>
</form>


